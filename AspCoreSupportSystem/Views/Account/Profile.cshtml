@model DataAccess.Dto.UserProfileListDto

@{
    if (ViewBag.isAdmin == true)
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    
}
   
<div class="row mt-5">
        <div class="col-md-3 "></div>
        <div class="col-md-6">

            @{
                if (Model.ProfileStatus == "ChangedPassword")
                {
                    <div class="alert alert-success">
                        <small>Şifreniz Başarıyla Değiştirildi.</small>
                    </div>
                }
                else if (Model.ProfileStatus == "ProfileUpdated")
                {
                    <div class="alert alert-success">
                        <small>Bilgileriniz Başarıyla Güncellendi.</small>
                    </div>
                }
                else
                {
                    
                }
            }

            <h4 class="text-center">Profil Sayfası</h4>
            <hr />
            <table class="table table-hover table-secondary rounded">
                <tr>
                    <th>İsim</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Soyisim</th>
                    <td>@Model.Lastname</td>
                </tr>
                <tr>
                    <th>Telefon</th>
                    <td>@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <th>Cinsiyet</th>
                    <td>@Model.Gender</td>

                </tr>
                <tr>
                    <th>Doğum Tarihi</th>
                    <td>
                        @{
                            if (Model.BirthDay == null)
                            {
                                <span>Belirtilmemiş</span>
                            }
                            else
                            {
                                @Model.BirthDay.Value.ToShortDateString()
                                ;
                            }
                        }
                    </td>
                </tr>
                <tr>
                    <th>Şehir</th>
                    <td>@Model.CityName</td>
                </tr>
                <tr>
                    <th>Adres</th>
                    <td>
                        @{
                            if (String.IsNullOrEmpty(Model.Address))
                            {
                                <span>Belirtilmemiş</span>
                            }
                            else
                            {
                                @Model.Address
                            }
                        }
                    </td>
                </tr>
            </table>
            <a class="mb-5 btn btn-block btn-primary" href="/Account/UserUpdate">Bilgilerimi Güncelle</a>
        </div>
        <div class="col-md-3"></div>
    </div>
    